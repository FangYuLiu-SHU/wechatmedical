page {
  height: calc(100%);
  background-color: #2ec8ee;
}

.container {
  position: relative;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.head {
  height: 20vh;
  width: 100%;
  /* 超出区域就截取 */
  overflow: hidden;
}

.text {
  color: #000000;
}

.time {
  color: #ff0000;
}

.body {
  /* display: flex; */
  width: 90%;
  height: auto;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top:170rpx;
  background-color: aliceblue;
}

.nav {
  justify-content: space-between;
  display: flex;
  width: 80%;
  height: 60rpx;
  margin: auto;
  flex-direction: row;
}

.nav-item {
  width: 50%;
  font-size: 45rpx;
  text-align: center;
}

.nav-item.active {
  color: red;
}

.tab-box {
  background-color: #2ec8ee;
  margin: 10px;
  margin-bottom: 20px;
}

.tab-content {
  overflow-y: scroll;
}
