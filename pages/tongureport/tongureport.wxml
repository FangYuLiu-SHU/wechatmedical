<view class="container">
    <view class="head">
        <view class="text">健康报告生成时间：</view>
        <view class="time">{{currentTime}}</view>
    </view>

    <view class="body">
        <!-- tab导航栏 -->
        <!-- scroll-left属性可以控制滚动条位置 -->
        <!-- scroll-with-animation滚动添加动画过渡 -->
        <view scroll-x="true" class="nav" scroll-left="{{navScrollLeft}}" scroll-with-animation="{{true}}">
            <block wx:for="{{navData}}" wx:for-index="idx" wx:for-item="navItem" wx:key="idx">
                <view class="nav-item {{currentTab == idx ?'active':''}}" data-current="{{idx}}" bindtap="switchNav">
                    {{navItem.text}}</view>
            </block>
        </view>
        <!-- 页面内容 -->
        <swiper class="tab-box" current="{{currentTab}}" duration="300" bindchange="switchTab">
            <swiper-item wx:for="{{[0,1]}}" wx:for-item="tabItem" wx:for-index="idx" wx:key="idx"
                class="tab-content">
                {{tabItem}}
            </swiper-item>
        </swiper>
    </view>
</view>