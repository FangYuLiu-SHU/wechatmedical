/* pages/index/index.wxss */
.main {
  font-size: 32rpx;
  font-family: 'Microsoft YaHei';
  color: #555
}

.container {
  background-color: #F2f2f2;
}

/*轮播*/
.swiper_box {
  /*width: 100%;*/
  height: 390rpx;
}

swiper.swiper {
  height: 100%;
}

.swiper-item {
  display: block;
  height: 100%;
}

.slide-navigator {
  height: 100%;
}

.slide-image {
  height: 100%;
  width: 100%;
  display: inline-block;
  overflow: hidden;
}

/*分类*/
.unav {
  display: flex;
  background: #fff;
  height: 200rpx;
  padding: 20rpx 0
}

.navlist {
  float: left;
  width: 25%;
  margin: auto;
  text-align: center
}

.navthumb {
  width: 100%;
  height: 120rpx;
  margin: 20rpx auto;
}

.navthumb image {
  width: 120rpx;
  height: 120rpx;
}

.navname {
  text-align: center;
  height: 39rpx;
  line-height: 39rpx;
}

.utitle {
  width: 100%;
  height: 90rpx;
  text-align: center;
  background: #fff;
}

.mtitle {
  font-size: 40rpx;
  font-weight: bold;
  color: #000;
  margin-top: 20rpx;
  padding: 20rpx;
}

.news {
  width: 100%;
  height: auto;
}

.new {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 60px;
  border: 1px solid #eaeaea;
  border-bottom: 1ps solid #d0d0d0;
  border-radius: 5px;
  margin: 10px;
  margin-bottom: 20px;
  padding: 8px;
  background-color: white;
  box-shadow: 5px 5px 5px #888888;
}

.new_detail{
  display: flex;
  flex-direction: column;
  position: relative;
}

.new_title{
  font-size:40rpx;
  align-items: center;
}

.new_view{
  margin-top: 20rpx;
  font-size:30rpx;
  align-items: center;
}