page {
  height: calc(100%);
  background-color: #edece8;
}

.wait_wrp {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.wait_image {
  position: relative;
  width: 100%;
  height: 100%;
}

.wait_text {
  position: absolute;
  left: 36%;
  transform: translate(-30%, -36%);
  top: 50%;
  color: greenyellow;
  font-size: 40rpx;
}

.wait_text1 {
  position: absolute;
  left: 50%;
  transform: translate(-50%, -50%);
  top: 55%;
  color: greenyellow;
  font-size: 40rpx;
}

.notice_image {
  width: 100%;
  height: 400rpx;
}

.notice_text {
  color: #ff0000;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.camera_container {
  height: 85vh;
  width: 100%;
  /* 超出区域就截取 */
  overflow: hidden;
  background-color: #109cff;
  position: relative;
}

.camera_wrp {
  width: 100%;
  height: 85vh;
  position: absolute;
}

camera {
  flex: 1;
  width: 100%;
  height: 85vh;
  position: absolute;
}

.outline {
  flex: 1;
  width: 100%;
  height: 85vh;
  position: absolute;
}

.cover_view {
  height: 100%;
  width: 100%;
  position: relative;
  display: flex;
  justify-content: center;
}

.cover_text {
  margin-top: 100rpx;
  color: #ffff;
  font-size: 50rpx;
}

.camera_auth {
  width: 100%;
  height: 85vh;
  position: absolute;
}

.auth_bg {
  height: 100%;
  width: 100%;
}

.auth_btn {
  position: absolute;
  left: 50%;
  transform: translate(-50%, -50%);
  top: 50%;
  color: greenyellow;
  font-size: 40rpx;
}

.menu_container {
  position: relative;
  flex: 1;
}

.menu_content {
  background-color: #fff;
  display: flex;
  height: 100%;
  align-items: center;
}

.menu_view {
  flex: 1;
  text-align: center;
}

.album_icon {
  font-size: 70rpx;
  color: #109cff;
}

.photo_icon {
  font-size: 130rpx;
  color: #109cff;
}

.xuanzhuan_icon {
  font-size: 75rpx;
  color: #109cff;
}